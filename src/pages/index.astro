---
import Layout from '@/src/layouts/Layout.astro';
const posts = await Astro.glob('./blog/*.md');
---

<Layout>
  <h1>Astro</h1>

  <p class="my-4">Blog posts:</p>
  <ul class="list-inside list-disc">
    {
      posts.map((post) => (
        <li>
          <a class="underline" href={post.url}>
            {post.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
